!!! 5
%html{:lang => "en-US"}
  %head
    = render "shared/head"
  %body
    = render "shared/metrika"
    .pageContainer
      .pageWrapper
        .header
          .logo
            = link_to(image_tag('logo.png'), root_path)
          .logo2
            .address
              %h2 Сызрань, ул. Советская 52
          .phone
            %h3 Прием заявок по телефону
            %span.nobr
              %span.code (846)
              %span.number 98-58-48
          - if signed_in?
            - unless current_user.is? :moderator
              .user-bar
                %ol
                  %li= link_to_unless_current "Личный кабинет", profile_path
                  %li= link_to_unless_current "Настройки", settings_path
                  %li= link_to 'Выйти', sign_out_path, :method => :delete
            - else
              .user-bar
                %ol
                  %li= link_to_unless_current "Список агентов", agents_path
                  %li= link_to "Выйти", sign_out_path, :method => :delete
          .clear
            
        .content
          #flashes
            - flash.each do |key, value|
              #flash
                = html_escape(value)
          = yield
          
    .footer      
      .l-column.l-column-left
        Тел.: (846) 98-58-48
        %br/
        Электропочта:
        = mail_to 'zayavki_syzran@bk.ru'
      .l-column.l-column-right
        © 
        = Time.new.year
        «Отличные наличные»
        %br/
        Сызрань, ул. Советская 52          